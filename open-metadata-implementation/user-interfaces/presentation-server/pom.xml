            <plugin>
                <groupId>org.apache.rat</groupId>
                <artifactId>apache-rat-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                    <excludes>
                        <exclude>**/tools/**</exclude>
                        <exclude>**/resources/public/**</exclude>
                        <exclude>**/resources/**</exclude>
                        <exclude>**/static/**</exclude>
                        <exclude>**/docs/**</exclude>
