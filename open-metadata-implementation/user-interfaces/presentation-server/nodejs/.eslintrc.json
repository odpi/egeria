{
  "env": {
      "browser": true,
      "node": true,
      "es6": true,
      "jest": true
  },
  "settings": {
      "react": {
          "version": "detect"
      }
  },
  "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
  },
  "plugins": ["react"],
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
      "ecmaFeatures": {
          "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
  },
  "parser": "babel-eslint"
}